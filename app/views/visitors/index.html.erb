<% if current_user %>
<div class="row">
  <div class="col-md-4">
  <%= image_tag 'mpdx.png' %>
  </div>
  <div class="col-md-8">
    <h3>Getting Started with <a href="https://mpdx.org">MPDX.org</a></h3>
    <ol>
      <li>Sign up to MPDX.org</li>
      <li>Select "Auckland Evangelical Church" in the Organization dropdown</li>
      <li>Copy your Email into the Username field</li>
      <li>Copy your Authentication Token into the Password field</li>
    </ol>
    <div class="form-group">
      <label for="email">Email</label>
      <input name="email" type="email" class="form-control" value="<%= current_user.email %>" readonly>
      <small class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="authenticationToken">Authentication Token</label>
      <input name="authenticationToken" type="text" class="form-control" value="<%= current_user.authentication_token %>" readonly>
    </div>

    <h3>My Account Lists</h3>
    <% if current_user.designation_accounts.count.zero? %>
      <h5>No Account Lists Available</h5>
      <p>
        Please contact the <a href="mailto:contact@aucklandev.co.nz" target="_blank">Donation Services Team</a> for permissions to access your donation data.
      </p>
    <% else %>
    <ul>
      <% current_user.designation_accounts.each do |designation_account| %>
        <li><%= designation_account.name %></li>
      <% end %>
    </ul>
    <% end %>
  </div>
</div>
<% else %>
<div class="jumbotron">
  <h1 class="display-3">Hello &amp; Welcome!</h1>
  <p class="lead">This is a tool to sync donations given to Auckland Evangelical Church with <a href="https://mpdx.org" target="_blank">MPDX.org</a>.</p>
  <hr class="my-4">
  <p>
    MPDX is Fundraising software built for missions and churches.
    <br>
    MPDX is a free, secure app that helps you grow and maintain your financial partnerships in a quick and easy way.
  </p>
  <p class="lead">
    <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-primary btn-lg' %>
    <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-default btn-lg' %>
  </p>
</div>
<% end %>
